{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "attach",
            "name": "Attach to Chrome",
            "port": 9222,
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "clean",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script",
                "clean"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "build",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script",
                "build"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "release",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script",
                "release"
            ]
        },
    ]
}